{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: thomas-nestjs",
            "remoteRoot": "/src",
            "localRoot": "${workspaceFolder}",
            "protocol": "inspector",
            "port": 9229,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\main.ts",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "console": "integratedTerminal"
        }
    ]
}